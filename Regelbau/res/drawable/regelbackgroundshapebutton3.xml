<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#008BBD" /> 
            <stroke
                android:width="3dp"
                android:color="#33b5e5" />
           <corners
                android:topRightRadius="15dp"
                android:bottomRightRadius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#33b5e5" 
                android:endColor="#008BBD"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#008BBD" />
            <corners
                android:topRightRadius="15dp"
                android:bottomRightRadius="15dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
            <margin
                android:left="-10dp"
            	android:top="-10dp"
                android:right="-10dp"
                android:bottom="-10dp" />
            
        </shape>
    </item>
</selector>