<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#B00029" /> 
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"/>
<!--                 android:color="#FF3665" /> -->
           <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FF3665" 
                android:endColor="#E40035"
                android:angle="270" />
            <!-- 859dbc -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"/>
<!--                 android:color="#E40035" /> -->
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>